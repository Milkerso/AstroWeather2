        android:layout_width="318dp"
        android:layout_height="237dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:width="10dp"
        android:height="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="Condition Icon"
        app:srcCompat="@drawable/icon_na" />

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/highTemperatureTextView"
        android:layout_marginTop="53dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/day"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/highTemperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="489dp"
        android:layout_marginTop="112dp"
        android:paddingTop="5dp"
        android:text="@string/high"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/low"
        android:id="@+id/lowTemperatureTextView"
        android:layout_below="@+id/highTemperatureTextView"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />


    <LinearLayout
